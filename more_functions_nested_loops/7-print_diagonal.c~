#include <stdlib.h>
#include <stdio.h>
#include "main.h"

/**
 * print_diagonale - Short description, single line
 * @n: qdef
 * Description: this is a description
 * Return: Description of the returned value
 */

void print_diagonal(int n)
{
	int i;
	int j;

	if (n <= 0)
	{
		_putchar('\n');
	}
	else
	{
		for (i = 0; i < n; i++)
		{
			for (j = 0; j < i; j++)
			{
				_putchar(' ');
			}
		_putchar('\\');
		_putchar('\n');
		}
	}
}
